#version 330 // OpenGL version 3.3 (minimum requirement)

in vec3 retNormal; 
in vec2 retTexCoord;

out vec4 FragColor;

uniform vec3 DiffuseColor;
uniform sampler2D sampler1;
uniform sampler2D sampler2;

void main()
{
	//FragColor = texture(sampler1, retTexCoord); // Texture only 
	FragColor = vec4(DiffuseColor, 1.0f) * texture(sampler1, retTexCoord); // Texture and Diffuse color 
}