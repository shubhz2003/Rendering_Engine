#version 330 // OpenGL version 3.3 (minimum requirement)

in vec3 retColor; // MUST use the same name as out variable used by vertex shader
in vec2 retTexCoord;

out vec4 FragColor;

uniform sampler2D sampler1;

void main()
{
	//FragColor = retColor;
	FragColor = texture(sampler1, retTexCoord); // Example1: Texture only
}